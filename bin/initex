#!/usr/bin/env sh
set -eu

ROOT_DIR="$(CDPATH= cd -- "$(dirname -- "$0")/.." && pwd)"
TEX_BIN="$ROOT_DIR/bin/tex"

if [ ! -x "$TEX_BIN" ]; then
  echo "Missing tex launcher: $TEX_BIN" >&2
  exit 1
fi

case "${1-}" in
  -ini|--ini|--initex)
    exec "$TEX_BIN" "$@"
    ;;
  *)
    exec "$TEX_BIN" --initex "$@"
    ;;
esac
